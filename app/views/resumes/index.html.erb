<div class="content">
  <div class="container">
    <div class="pull-right dropdown clearfix">
      <button class="btn btn-default dropdown-toggle" type="button color: #636262" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        排序 <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li><%= link_to("金额从大到小", resumes_path(:order => "by_lower_bound")) %></li>
        <li><%= link_to("金额从小到大", resumes_path(order: "by_upper_bound")) %></li>
        <li><%= link_to("最新发布时间", resumes_path) %></li>
      </ul>
    </div>

    <div class="table col-centered">
      <tbody>
        <% @resumes.each do |resume| %>
        <div class="job_vacancy row"><p><%= link_to(resume.title, resume_path(resume)) %></p></div>
        <div class="job_details_1 row">
          <div class="col-sm-4 col-xs-6"><p><i class="fa fa-arrow-right" aria-hidden="true"></i>意向类型：  <%= resume.category %></p></div>
          <div class="col-sm-4 col-xs-6"><p><i class="fa fa-location-arrow" aria-hidden="true"></i>工作地点：  <%= resume.location %></p></div>
          <div class="col-sm-4 col-xs-6"><p><i class="fa fa-calendar" aria-hidden="true"></i>发布时间：  <%= resume.created_at.strftime("%Y年%m月%d日") %></p></div>
          <div class="col-sm-4 col-xs-6"><p><i class="fa fa-users" aria-hidden="true"></i>公司/个人：  <%= resume.name %></p></div>
          <div class="col-sm-4 col-xs-6"><p><i class="fa fa-address-book" aria-hidden="true"></i>联系方式：  <%= resume.contact %></p></div>
          <div class="col-sm-4 col-xs-6"><p><i class="fa fa-jpy" aria-hidden="true"></i>期望报酬：  <%= resume.wage %><%= resume.wage_unit %></p></div>
        </div>
        <div class="job_details_2 row">
          <div class="col-sm-12 col-xs-6"><p><i class="fa fa-tasks" aria-hidden="true"></i>工作意向：  <%= resume.content %></p></div>
          <div class="col-sm-12 col-xs-6"><p><i class="fa fa-trophy" aria-hidden="true"></i>技能特长：  <%= resume.description %></p></div>
          <div class="col-md-4 col-md-offset-8">
          </div>
        </div>
        <% end %>
      </tbody>
    </div>
    <div class="text-center" style="padding-top: 1.5em">
      <%= will_paginate(@resumes, renderer: BootstrapPagination::Rails) %>
    </div>

  </div>
</div>
